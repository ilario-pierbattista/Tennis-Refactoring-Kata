{
  "rules": {
    "eofline": true,
    "semicolon": [
      true,
      "always"
    ],
    "no-trailing-whitespace": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "curly": true,
    "indent": [
      true,
      "spaces",
      4
    ],
    "prefer-const": true,
    "arrow-return-shorthand": true,
    "ordered-imports": true,
    "space-before-function-paren": false,
    "max-line-length": [
      true,
      120
    ],
    "array-type": [
      true,
      "array"
    ],
    "space-within-parens": [
      true,
      0
    ],
    "no-consecutive-blank-lines": true,
    "no-console": [
      true,
      "log",
      "error"
    ]
  }
}